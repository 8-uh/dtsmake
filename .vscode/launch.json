    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run with mocha",
            "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
            "cwd": "${workspaceRoot}",
            "args": ["--compilers","ts:espower-typescript/guess","test/*-test.ts"],
            "sourceMaps": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "プログラムの起動",
            "program": "${workspaceRoot}\\lib\\dtsmake.js",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "プロセスに添付",
            "port": 5858
        }
    ]
}